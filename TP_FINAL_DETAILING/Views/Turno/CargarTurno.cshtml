@model Turno

<div class="container col-6 justify-content-evenly border border-1 border-primary rounded" >

    <h1>CARGAR TURNO</h1>

    <form asp-action="CargarTurnoPost">

        <div class="form-group">

            <label class="control-label">SERVICIO</label>
            <input type="text" value=@ViewBag.NombreServicio class="form-control" disabled />

        </div>

        <div class="form-group">

            <label class="control-label">ID TURNO</label>
           @* <input asp-for="IdTurno" type="text" value=@Model.IdTurno class="form-control" disabled />*@
            <input asp-for="IdTurno" class="form-control" disabled />
        </div>

       <div class="form-group">
           @{
                var indexSs = (int)TempData["idServicio3"];
            } 
            <label class="control-label">ID SERVICIO</label>
            <input asp-for=IdServicio type="number" value=@indexSs class="form-control" readonly />


        </div>

        <div class="form-group">
            @{
                var index = (int)TempData["IdCliente"];
            }

            <label class="control-label">CLIENTE ID</label>
            <input asp-for="IdCliente" type="text" value=@index class="form-control" readonly/>


        </div>

        <div class="form-group">
          @*  @{
                DateTime fecha = @Model.Fecha;
            }*@
            <label class="control-label">FECHA</label>
            <input asp-for="Fecha" type="datetime" value=@Model.Fecha class="form-control" disabled />

        </div>

        <div class="form-group">

            <label class="control-label">PATENTE</label>
            <input asp-for="Patente" class="form-control" />

        </div>

        <div class="form-group m-3">

            <input type="submit" value="FINALIZAR" class="btn btn-outline-dark" /> @*es un tipo de boton especial que manda los datos del formulario*@

        </div>
    
    </form>

</div>